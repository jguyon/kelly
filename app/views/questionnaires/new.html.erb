<div class="row">
  <div class="col m6">
    <div class="card-panel red lighten-2 white-text flow-text">
      <h1><%= t 'brand' %></h1>
      <p><%= t 'tagline' %></p>
    </div>
  </div>
  <div class="col m6">
    <div class="card">
      <div class="card-content black-text">
        <span class="card-title black-text">
          <%= t '.create_questionnaire' %>
        </span>
        <%= better_form_for @questionnaire do |f| %>
          <div class="input-field">
            <%= f.text_field :name %>
            <%= f.label :name %>
          </div>

          <%= f.submit class: 'btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
